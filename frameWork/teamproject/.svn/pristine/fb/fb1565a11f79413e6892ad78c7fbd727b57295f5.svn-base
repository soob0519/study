@charset "UTF-8";

* {
	font-family: 돋움;
}
body {
	font-size: 12px;
}
body > section > div:nth-child(1) > form > input[type=text] {
    width: 130px;
    height: 20px;
    border-radius: 10px;
}
header {
	width:100%;
	top:0px;
	height:60px;
	padding-top:20px;
	background-color:aliceblue;
	font-size:20px;
	font-weight:bold;
	text-align:center;
	position:fixed;
}
body > header > div > input[type=text] {
    border-radius: 20px;
    padding-left: 20px;
    font-size:20px;
}
body > header > div > button {
   	border-radius: 20px;
}
body > nav {
    padding-top: 72px;
}
body > nav > div {
	width:100%;
	height:50px;
	background-color:lightslategray;
	font-size:18px;
	text-align:center;
	justify-items: center;
	padding: 5px;
}
body > nav > div > table {
	width:800px;
	height:50px;
	font-size:18px;
	padding:5px;
}
body > nav > div > table > tbody > tr > th {
   	border-radius: 10px;
}
body > nav > div > table > tbody > tr {
	   background-color: lavender;
}
body > nav > div > table > tbody > tr > th:hover {
    background-color: ivory;
}
a {
	color: mediumpurple;
	text-decoration:none;
}
section {
	width:100%;
	height: 1500px;
	background-color:white;
	margin-top: 20px;
	justify-items: center;
}
footer {
	height:30px;
	background-color:slategray;	
}

.table1 {
	width: 1000px;
	height: 200px;
	border:1px solid #ccc;
	border-collapse: collapse;	/* 셀사이 공간제거 */
}
body > section > div {
    justify-self: center;
}

th,td {
	border:1px solid #ccc;
	padding: 7px;
	text-align:center;
	background-color: floralwhite;
}
body > nav > div > table > tbody > tr > th {
    background-color: lavender;
}
caption {
	font-size: 24px;
	font-weight: bold;
	padding: 10px;
}
button {
	padding: 8px;
	background-color: aliceblue;
	border-radius: 10px;
	border: 1px solid skyblue;
}
button:hover {
	background-color: ivory;
}
.div_button {
	width: 600px;
	margin-top: 10px;
	text-align: center;
}
.input1 {
	width: 96%;
	font-size: 12px;
}
a {
	text-decoration: none;
}
body > section > div > form > table > tbody > tr > td {
    font-size: 16px;
}
body > section > div > form > table > tbody > tr > td > input[type=text] {
    width: 96%;
    height: 25px;
    border-radius: 10px;
    border: 1px solid skyblue;
}
body > section > div > form > table > tbody > tr > td > textarea {
    width: 96%;
    height: 200px;
    border: 1px solid skyblue;
    border-radius: 10px;
}
body > section > div > form > table > tbody > tr > td > input[type=text] {
    padding-left: 10px;
}
body > section > div > form > table > tbody > tr > td > textarea {
    padding-left: 10px;
}
body > section > div > form > table > tbody > tr > td > select {
    width: 90%;
    height: 25px;
    border-radius: 10px;
    border: 1px solid skyblue;
    text-align: center;
}