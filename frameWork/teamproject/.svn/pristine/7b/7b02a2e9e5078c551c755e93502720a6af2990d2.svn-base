<!-- 가게 공지사항 관련 SQL -->
<!-- 나중에 가게 고유번호랑 연결 -->
<%
String unq = request.getParameter("stid");

String sql2 ="SELECT "
			+"		STID,GUBUN,TITLE,NTCONTENT,TO_CHAR(RDATE,'YYYY-MM-DD') RDATE "
			+" 	FROM STORENOTICE  WHERE STID='"+unq+"' "
			+" 		ORDER BY RDATE DESC";
ResultSet rs2 = stmt.executeQuery(sql2);
%>

