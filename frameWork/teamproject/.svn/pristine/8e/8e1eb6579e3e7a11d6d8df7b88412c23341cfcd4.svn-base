			</tr>
			<%
			while(rs2.next()){
				String unq = rs2.getString("unq");
				String gubun = rs2.getString("gubun");
				String title = rs2.getString("title");
				String writer = rs2.getString("writer");
				String rdate = rs2.getString("rdate");
				int hits = rs2.getInt("hits");
				/*
				if(gubun.equals("1")){
					gubun = "분실";
