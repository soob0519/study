header {
	width:100%;
	height:60px;
	padding-top:20px;
	background-color:aliceblue;
	font-size:20px;
	font-weight:bold;
	text-align:center;
	position:fixed;
}
body > header > div > input[type=text] {
    border-radius: 20px;
    padding-left: 20px;
    font-size:20px;
}
body > header > div > button {
   	border-radius: 20px;
}
body > nav {
    padding-top: 80px;
}
body > nav > div {
	width:100%;
	height:50px;
	background-color:#c4f7f4;
	font-size:18px;
	text-align:center;
	padding:5px;
}
section {
	width:1200px;
	height:1800px;
	margin: auto;

}
footer {
	background-color:#ffcc99;
	height:100px;
	width:100%;
}

body {
	background-color:ivory;	
}