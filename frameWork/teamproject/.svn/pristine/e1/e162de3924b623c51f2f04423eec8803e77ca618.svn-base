<script>
function fn_userid() {
	userid = document.frm.userid.value;
	location="loginChk2.jsp?userid="+userid;
}

 function fn_submit() {
	if (document.frm.userid.value == "") {
		alert("아이디를 입력하세요.");	
		document.frm.userid.focus();
		return false;
	}	
	
	if (document.frm.userid.value.length < 4 ||
		document.frm.userid.value.length >12) 
	{
		alert("아이디는 최소 4글자 이상입니다.");
		return false;
	}
	
	if (document.frm.pass.value == "") {
		alert("비밀번호를 입력하세요.");	
		document.frm.pass.focus();
		return false;
	}	
	
	if (document.frm.pass.value.length < 8) 
	{
		alert("비밀번호는 최소 8글자 이상입니다.");
		return false;
	}
	
	if (document.frm.pass1.value == "") {
		alert("비밀번호를 입력하세요.");	
		document.frm.pass1.focus();
		return false;
	}
	
	if (document.frm.pass.value != document.frm.pass1.value) {
		alert("비밀번호가 같지 않습니다.");	
		document.frm.pass1.focus();
		return false;
	}	
	
	if (document.frm.name.value == "") {
		alert("이름을 입력하세요.");	
		document.frm.name.focus();
		return false;
	}
	
	if (document.frm.rname.value == "") {
		alert("상호명을 입력하세요.");	
		document.frm.rname.focus();
		return false;
	}
	
	if (document.frm.rkind.value == "") {
		alert("업종을 입력하세요.");	
		document.frm.rkind.focus();
		return false;
	}
	
	if (document.frm.addr.value == "") {
		alert("지역(시/도) 입력하세요.");	
		document.frm.addr.focus();
		return false;
	}
	
	if (document.frm.mobile1.value == "") {
		alert("핸드폰 번호를 입력하세요.");	
		document.frm.mobile1.focus();
		return false;
	}
	
	if (document.frm.mobile2.value == "") {
		alert("핸드폰 번호를 입력하세요.");	
		document.frm.mobile2.focus();
		return false;
	}
	
	if (document.frm.mobile3.value == "") {
		alert("핸드폰 번호를 입력하세요.");	
		document.frm.mobile3.focus();
		return false;
	}
	
	if (document.frm.email.value == "") {
		alert("이메일을 입력하세요.");	
		document.frm.email.focus();
		return false;
	}
	
	document.frm.submit();
 }
</script>
 
 
